{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@api/*": ["./src/actions/*"],
      "@store/*": ["./src/store/*"],
      "@themed/*": ["./src/components/theme/ui/*"],
      "@asset/*": ["./src/asset/*"],
      "@repo/ui/*": ["./src/packages/ui/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
